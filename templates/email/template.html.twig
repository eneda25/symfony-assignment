<html lang="en">
<body>
<div class="body">
    <div class="container">
        <div class="content">
                {% for post in posts %}
                    <h3 class="text-center">{{ post.user_name }} has written :</h3>
                    <ul>
                        {% for title in post.post_title %}
                            <li>{{ title }}</li>
                        {% endfor %}
                    </ul>
                {% endfor %}
        </div>
    </div>
</div>
</body>
</html>